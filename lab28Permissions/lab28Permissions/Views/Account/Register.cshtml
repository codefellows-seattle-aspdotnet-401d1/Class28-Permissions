@model lab28Permissions.Models.RegisterViewModel
<h1>Registration Page</h1>

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="All"></div>

    <label asp-for="UserName"></label>
    <input asp-for="UserName" />
    <span asp-validation-for="UserName"></span><br />

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="UserName"></span><br />

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span><br />


    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span><br />

    <label asp-for="Birthday"></label>
    <input type="date" asp-for="Birthday" />
    <span asp-validation-for="Birthday"></span><br />

    <button type="submit">Register</button>

</form>